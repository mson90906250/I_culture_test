<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/shop03_img01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/shop03_img01" />

        <TextView
            android:id="@+id/shop03_t001"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:text="泡芙的家"
            android:textColor="@color/blueviolet"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/shop03_btn01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/Yellow"
                android:text="@string/shop03_btn01"
                android:textColor="@color/Red"
                android:textStyle="bold" />

            <Button
                android:id="@+id/shop03_btn02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/Yellow"
                android:text="@string/shop03_btn02"
                android:textColor="@color/Red"
                android:textStyle="bold" />

            <Button
                android:id="@+id/shop03_btn03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/Yellow"
                android:text="@string/shop03_btn03"
                android:textColor="@color/Red"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/shop03_btn04"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                app:srcCompat="@drawable/heart" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/padding">

                <TextView
                    android:id="@+id/shop03_t002"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />

                <ListView
                    android:id="@+id/shop03_list"
                    android:layout_width="match_parent"
                    android:layout_height="176dp"
                    android:layout_marginTop="@dimen/padding" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:orientation="vertical"-->
        <!--android:layout_gravity="start"-->
        <!--android:fitsSystemWindows="true">-->

        <!--<include layout="@layout/nav_header_shop"/>-->

    <!--</LinearLayout>-->


</LinearLayout>