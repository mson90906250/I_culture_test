<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/home_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/Margins"
        android:layout_marginTop="@dimen/Margins"
        android:layout_marginRight="@dimen/Margins"
        android:background="@color/Yellow"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_im001"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/todo"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <TextView
            android:id="@+id/home_t001"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/pa01"
            android:layout_weight="1"
            android:text="@string/home_t001"
            android:textSize="@dimen/fontsize" />

        <TextView
            android:id="@+id/home_t002"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/pa01"
            android:layout_weight="1"
            android:text="@string/home_t002"
            android:textAlignment="textEnd"
            android:textSize="@dimen/fontsize" />

        <TextView
            android:id="@+id/home_t003"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/pa01"
            android:layout_weight="1"
            android:text="@string/home_t003"
            android:textSize="@dimen/fontsize" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:paddingEnd="110dp" />

    <LinearLayout
        android:id="@+id/SliderDots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewPager"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/home_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/Margins"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="10dp"
        android:background="@color/Teal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/home_t004"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/home_t004"
            android:textColor="@color/Red"
            android:textSize="@dimen/fontsize" />

        <TextView
            android:id="@+id/home_t005"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/home_t005"
            android:textAlignment="textEnd"
            android:textSize="@dimen/fontsize" />
    </LinearLayout>

    <ImageView
        android:id="@+id/home_im003"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_below="@+id/home_layout2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/Margins"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/home_cat2" />

    <ImageView
        android:id="@+id/home_im004"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_below="@+id/home_im003"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/Margins"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/home_cat3" />

    <ImageView
        android:id="@+id/home_im005"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_below="@+id/home_im004"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/Margins"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/home_cat4" />

    <TextView
        android:id="@+id/home_t006"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/home_layout2"
        android:layout_alignEnd="@+id/home_layout2"
        android:layout_marginEnd="@dimen/pa01"
        android:layout_toEndOf="@+id/home_im003"
        android:text="@string/todo" />

    <TextView
        android:id="@+id/home_t007"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/home_t006"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/Margins"
        android:layout_toEndOf="@+id/home_im004"
        android:text="@string/todo" />

    <TextView
        android:id="@+id/home_t008"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/home_t007"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/Margins"
        android:layout_toEndOf="@+id/home_im004"
        android:text="@string/todo" />

    <TextView
        android:id="@+id/home_t009"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_layout2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="10dp"
        android:text="@string/home_t009" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_t009"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fadeScrollbars="false"
            android:orientation="horizontal">

            <GridView
                android:id="@+id/m0703_g001"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:stretchMode="spacingWidthUniform" />
        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>